set -o pipefail


##################
# Init variables #
##################
readonly version=1.1.2				# Script version
readonly packageversion=@pkgversion@		# Package version

readonly etclocation=@sysconfdir@/lxcu		# Path to config directory

# Ensure environment variables are set.
export XDG_RUNTIME_DIR="/run/user/$UID"
export DBUS_SESSION_BUS_ADDRESS="unix:path=${XDG_RUNTIME_DIR}/bus"


#############
# Functions #
#############

# -h --help output.
# No parameters
# No return value
usage()
{
cat << EOF
Usage is:-
$(basename "$0") {-h|-V}
$(basename "$0") [-d DISTRIBUTION] [-r RELEASE] -p PROJECT_ROOT
		 -n CONTAINER_NAME
Usage is:-
$(basename "$0") [options]
	-d or --dist 'distribution-name'
	-h or --help Display this help information
	-n or --name 'container name'
	-p or --project-root 'project root directory'
	-r or --rel 'release-name'
	-V or --version Print script version information
EOF
}

# Standard function to emit messages depending on various parameters.
# Parameters -	$1 What:-	The message to emit.
#		$2 Where:-	stdout == 0
#				stderr == 1
# No return value.
output()
{
	if (( !$2 )); then
		printf "%s\n" "$1"
	else
		printf "%s\n" "$1" 1>&2
	fi
}

# Standard function to tidy up and return exit code.
# Parameters - 	$1 is the exit code.
# No return value.
script_exit()
{
	if [[ -n "$project" ]]; then
		if (( $(lxc-ls -1 --running --filter="^$project$" | wc -l) ))
		then
			lxc-stop -n "$project"
		fi
		if (( $(lxc-ls -1 --filter="^$project$" | wc -l) )); then
			lxc-destroy -n "$project"
		fi
	fi
	exit "$1"
}

# Standard function to test command error and exit if non-zero.
# Parameters - 	$1 is the exit code, (normally $? from the preceeding command).
# No return value.
std_cmd_err_handler()
{
	if (( $1 )); then
		script_exit "$1"
	fi
}

# Standard trap exit function.
# No parameters.
# No return value.
# shellcheck disable=SC2317  # Do not warn about unreachable commands in trap
# functions, they are legitimate.
trap_exit()
{
	local -i exit_code=$?
	local msg

	msg="Script terminating with exit code $exit_code due to trap received."
	output "$msg" 1
	std_cmd_err_handler "$exit_code"
}

# Setup trap
trap trap_exit SIGHUP SIGINT SIGQUIT SIGTERM

# Process the config file just for the parameters of interest.
# Parameters - None
# No return value.
proc_config_file()
{
	local input=()
	local msg
	local oldIFS=$IFS

	IFS="="

	if [[ ! -e "$etclocation/lxcu.conf" || ! -f "$etclocation/lxcu.conf" \
		|| ! -r "$etclocation/lxcu.conf" ]]; then
		msg="$etclocation/lxcu.conf must exist, be a file and be"
		msg+=" readable."
		output "$msg" 1
		std_cmd_err_handler 66
	fi

	exec 3<"$etclocation/lxcu.conf"
	std_cmd_err_handler $?
	while read -u3 -ra input; do
		case ${input[0]} in
		dist)
			dist=${input[1]}
			;;
		rel)
			rel=${input[1]}
			;;
		contlocation)
			contlocation=$(echo "${input[1]}" | envsubst)
			;;
		esac
	done
	exec 3<&-

	IFS=$oldIFS
}

# Process command line arguments with GNU getopt.
# Parameters -	$1 is the command line.
# No return value.
proc_CL()
{
	local GETOPTTEMP
	local msg
	local tmp

	tmp="getopt -o d:hn:p:r:V --long dist:,help,name:,project-root:,rel:"
	tmp+=",version"
	GETOPTTEMP=$($tmp -n "$0" -- "$@")
	std_cmd_err_handler $?

	eval set -- "$GETOPTTEMP"
	std_cmd_err_handler $?

	while true; do
		case "$1" in
		-d|--dist)
			dist=$2
			shift 2
			;;
		-h|--help)
			usage
			shift
			script_exit 0
			;;
		-n|--name)
			name=$2
			shift 2
			;;
		-p|--project-root)
			projectroot=$2
			shift 2
			;;
		-r|--rel)
			rel=$2
			shift 2
			;;
		-V|--version)
			printf "%s Script version %s\n" "$0" $version
			printf "%s Package version %s\n" "$0" $packageversion
			shift
			script_exit 0
			;;
		--)	shift
			break
			;;
		*)	output "Internal error." 1
			std_cmd_err_handler 64
			;;
		esac
	done

	# Script does not accept other arguments.
	if (( $# > 0 )); then
		output "Invalid argument." 1
		std_cmd_err_handler 64
	fi

	# At least container name and project root directory must be specified.
	if [[ -z $name || -z $projectroot ]]; then
		msg="At least name and project root must be specified."
		output "$msg" 1
		std_cmd_err_handler 64
	fi
}

# Perform an APT install
# No parameters.
# No return value.
apt_install()
{
	@bindir@/lxcu-attach -n "$project" -- sudo apt-get update
	std_cmd_err_handler $?
	if [[ -e $projectroot/lxcu/$dist/$rel/install.list ]]; then
		grep -v '^[[:blank:]]*#' \
			"$projectroot/lxcu/$dist/$rel/install.list" \
			| xargs @bindir@/lxcu-attach -n "$project" \
			-- sudo apt-get -- -y install
		std_cmd_err_handler $?
	elif [[ -e $projectroot/lxcu/$dist/install.list ]]; then
		grep -v '^[[:blank:]]*#' \
			"$projectroot/lxcu/$dist/install.list" \
			| xargs @bindir@/lxcu-attach -n "$project" \
			-- sudo apt-get -- -y install
		std_cmd_err_handler $?
	fi
}

# Perform a dnf install
# No parameters.
# No return value.
dnf_install()
{
	if [[ -e $projectroot/lxcu/$dist/$rel/install.list ]]; then
		grep -v '^[[:blank:]]*#' \
			"$projectroot/lxcu/$dist/$rel/install.list" \
			| xargs @bindir@/lxcu-attach -n "$project" \
			-- sudo dnf -- -y install
		std_cmd_err_handler $?
	elif [[ -e $projectroot/lxcu/$dist/install.list ]]; then
		grep -v '^[[:blank:]]*#' \
			"$projectroot/lxcu/$dist/install.list" \
			| xargs @bindir@/lxcu-attach -n "$project" \
			-- sudo dnf -- -y install
		std_cmd_err_handler $?
	fi
}

# Perform a zypper install
# No parameters.
# No return value.
zypper_install()
{
	if [[ -e $projectroot/lxcu/$dist/$rel/install.list ]]; then
		grep -v '^[[:blank:]]*#' \
			"$projectroot/lxcu/$dist/$rel/install.list" \
			| xargs @bindir@/lxcu-attach -n "$project" \
			-- sudo zypper -- -n install
		std_cmd_err_handler $?
	elif [[ -e $projectroot/lxcu/$dist/install.list ]]; then
		grep -v '^[[:blank:]]*#' \
			"$projectroot/lxcu/$dist/install.list" \
			| xargs @bindir@/lxcu-attach -n "$project" \
			-- sudo zypper -- -n install
		std_cmd_err_handler $?
	fi
}


########
# Main #
########

proc_config_file

proc_CL "$@"

# shellcheck disable=SC2164 # cd failure covered by std_cmd_err_handler.
cd "$projectroot"
std_cmd_err_handler $?
fullprojectroot=$(pwd)
# cd failure covered by std_cmd_err_handler.
# Cannot use subshell as assigning variable.
# shellcheck disable=SC2164,2103
cd -
std_cmd_err_handler $?
project=${fullprojectroot##*/}

# Target container must not exist. If it does it is not ours so prevent
# destruction.
if (( $(lxc-ls -1 --filter="^$project$" | wc -l) )); then
	output "Target container $project must not exist." 1
	project=""
	std_cmd_err_handler  79
fi

@bindir@/lxcu-copy -n "$name" -N "$project"
std_cmd_err_handler $?
tmp="lxc.mount.entry = $fullprojectroot home/$USER/$project"
tmp+=" none bind,create=dir 0 0"
echo "$tmp" | tee -a "$contlocation/$project/config"
std_cmd_err_handler $?

@bindir@/lxcu-start -n "$project"
std_cmd_err_handler $?

case $dist in
debian)
	apt_install
	;;
fedora)
	dnf_install
	;;
opensuse)
	zypper_install
	;;
ubuntu)
	apt_install
	;;
*)
	output "Invalid distribution" 1
	std_cmd_err_handler 64
	;;
esac

@bindir@/lxcu-attach -n "$project" -- cp -- -vr "home/$USER/$project" build
std_cmd_err_handler $?
@bindir@/lxcu-attach "-n $project -vHOME=/build/atbuild"
std_cmd_err_handler $?

# And exit.
script_exit 0

